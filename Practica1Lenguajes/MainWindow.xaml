<Window x:Class="Practica1Lenguajes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica1Lenguajes"
        mc:Ignorable="d"
        Title="MainWindow" Height="299.405" Width="677.381">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="416,44,0,0" VerticalAlignment="Top" Height="216" Width="202" MinColumnWidth="100" MaxColumnWidth="200">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding nombreLexema}" ClipboardContentBinding="{x:Null}" Header="Lexema"/>
                <DataGridTextColumn Binding="{Binding tipoLexema}" ClipboardContentBinding="{x:Null}" Header="Componente"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="label" Content="Ingrese el Texto" HorizontalAlignment="Left" Margin="49,17,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Revisar" HorizontalAlignment="Left" Margin="49,153,0,0" VerticalAlignment="Top" Width="113" RenderTransformOrigin="0.477,-0.414" Height="37" Click="button_Click"/>
        <TextBox x:Name="textBox" Height="100" Margin="49,48,363.2,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</Window>
